// Import Vuetify styling
@require '~vuetify/src/stylus/app.styl'

html {
    font-size 16px;
}
.theme--dark{
    &.application{
        background:linear-gradient(226deg,rgba(41,42,46,1) 0%,rgba(31,32,36,1) 100%) !important;
    }
    &.v-toolbar{
        background:linear-gradient(226deg,rgba(41,42,46,1) 0%,rgba(31,32,36,1) 100%) !important;
        box-shadow none;
    }
}
p{
    color #dcdcdc
    font-size 1.1em;
    line-height 1.5;
}

h1{
    font-size 4em;
    letter-spacing 1px;
    line-height 1.3;
}

h2{
    font-size 3.125em;
}

.form-bg {
		height: 100%;
		background: url('http://ipic-1253962968.file.myqcloud.com/2019-04-22-bg-1.svg');
		background-size: cover;

        header {
	        padding-top: 5%;
	        & > * {
		        text-align: center;
	        }
        }

        form {
            max-width 540px;
            margin: 52px auto;

            input {
                padding .8em 2em;
                background : #fff;
                outline : none;
                color: #000;
                width : 100%;
                margin: 10px 0;
                border-radius 3em;
                transition-duration  .3s;
                &:focus {
                    box-shadow 0 0 12px 2px $primary-color;
                }
                &.invalid {
                    box-shadow 0 0 12px 2px red;
                }
            }


            .submit {
                padding 1em 0;
                box-sizing : border-box;
                background:rgba(0,119,255,1) !important;
                box-shadow:0px 15px 25px 0px rgba(0,119,255,0.15) !important;
            }

            p {
                margin-top 3em;
                text-align : center;
                a {
                    text-decoration none;
                    color: #0077FF;
                }
            }
        }
}


